{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "src",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "src"
    ]
}
